<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/rv_main_item_margin"
    android:layout_marginStart="@dimen/rv_main_item_margin"
    android:layout_marginTop="@dimen/rv_main_item_margin"
    android:elevation="@dimen/card_view_elevation"
    card_view:cardCornerRadius="@dimen/rv_main_item_corner_radius">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/rv_main_item_padding">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="@integer/rv_main_item_max_line"
            android:minLines="@integer/rv_main_item_min_line"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentStart="true"
            tools:text="Title" />"

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:maxLines="@integer/rv_main_item_max_line"
            android:minLines="@integer/rv_main_item_min_line"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>